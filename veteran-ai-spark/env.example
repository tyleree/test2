# Production Environment Configuration for Render.com
# Copy this to .env and fill in your actual values

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# Pinecone Configuration  
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENV=your-pinecone-environment
PINECONE_INDEX=your-index-name

# Model Configuration
MODEL_BIG=gpt-4o
MODEL_SMALL=gpt-4o-mini

# CRITICAL: Choose embedding model that matches your Pinecone index dimensions
# For 1024D Pinecone index: use text-embedding-3-large with dimensions=1024
# For 1536D Pinecone index: use text-embedding-3-small or text-embedding-ada-002
EMBEDDING_MODEL=text-embedding-3-large

# Cache Configuration (Render.com persistent disk paths)
CACHE_DB_PATH=/opt/render/project/data/cache.sqlite
FAISS_PATH=/opt/render/project/data/query_cache.faiss

# Similarity Thresholds
SIM_THRESHOLD=0.92
DOC_OVERLAP_MIN=0.6
MAX_SOURCES=6
RETRIEVE_K=50
RERANK_K=8
COMPRESS_BUDGET_TOKENS=2200

# Cache Embedding Model (for semantic similarity)
CACHE_EMBEDDING_MODEL=all-MiniLM-L6-v2

# Admin Configuration (optional)
ADMIN_TOKEN=your-admin-token-here

# Document Version
DOC_VERSION_SALT=v1.0.0
